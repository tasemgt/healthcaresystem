<%- include('./intro_header'); -%>

<div class="page-header header-filter">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="card card-employment">
          <div class="card-header card-header-primary text-center">
            <h4 class="card-title">Enroll an Agency (For Program Directors)</h4>
          </div>
          <div class="card-body" style="padding: 2rem;">
              <form class="agency_form">
                <div class="row">
                  <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                      <label class="bmd-label-floating">Agency Name *</label>
                      <input type="text" class="form-control" id="agencyName" required>
                    </div>
                  </div>
                  <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                      <label class="bmd-label-floating">Agency Location *</label>
                      <input type="text" class="form-control" id="agencyLocation" required>
                    </div>
                  </div>
                  <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                      <label class="bmd-label-floating">Agency Description *</label>
                      <input type="text" class="form-control" id="agencyDesc" required>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                      <select id="country-select" class="custom-select" name="country">
                        <option value="0">Select a country</option>
                        <option value="+1">United States (+1)</option>
                        <option value="+1">Canada (+1)</option>
                        <option value="+44">United Kingdom (+44)</option>
                        <option value="+234">Nigeria (+234)</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                      <label class="bmd-label-floating">Phone number *</label>
                      <input type="number" class="form-control" id="phone" required>
                    </div>
                  </div>
                </div>
                <button type="submit" id="agency-btn" class="btn btn-primary btn-wd btn-md pull-right"> Submit</button>
              </form>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>

<%- include('./intro_footer'); -%>