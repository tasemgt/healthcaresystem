<%- include('../../partials/header'); -%>

<%- include('../../partials/sidebar'); -%>


<div class="main-panel">
  <!-- Navbar area -->
  <%- include('../../partials/navbar'); -%>

  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title">Register an Agency / Program Director (PD)</h4>
              <p class="card-category">Please fill in all required fields</p>
            </div>
            <div class="card-body">
              <form id="add_director_form">
                <div class="row">
                  <div class="col-md-6">
                    <h6>Agency Name:
                    <br><br>
                    <span id="agency-name" style="font-size:1.2rem">N/A</span>
                    </h6>
                  </div>
                  <div class="col-md-6" style="padding-top: 1rem">
                    <div class="input-group no-border">
                      <label class="bmd-label-floating">Enter Agency Application ID</label>
                      <input type="text" id="searchAgency" class="form-control" required>
                      <button type="button" class="btn btn-white btn-round btn-just-icon" id="searchAgencyApplication">
                        <i class="material-icons">search</i>
                        <div class="ripple-container"></div>
                      </button>
                    </div>
                  </div>
                </div>
                <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                      <label class="bmd-label-floating">Director's Title *</label>
                      <input type="text" class="form-control" id="title" required>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label class="bmd-label-floating">Director's First Name *</label>
                      <input type="text" class="form-control" id="firstName" required>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label class="bmd-label-floating">Director's Last Name *</label>
                      <input type="text" class="form-control" id="lastName" required>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label class="bmd-label-floating">Director's Email address </label>
                      <input type="email" class="form-control" id="email">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-3 col-sm-12">
                    <div class="dropdown bootstrap-select">
                      <select id="country" class="selectpicker" data-size="8" data-style="btn btn-primary btn-round" title="Select a country *" tabindex="-98">
                        <option value="+1">United States (+1)</option>
                        <option value="+1">Canada (+1)</option>
                        <option value="+44">United Kingdom (+44)</option>
                        <option value="+234">Nigeria (+234)</option>
                      </select>
                      <div class="dropdown-menu " role="combobox">
                        <div class="inner show" role="listbox" aria-expanded="false" tabindex="-1">
                          <ul class="dropdown-menu inner show"></ul>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="bmd-label-floating">Director's Phone Number *</label>
                      <input type="text" class="form-control" id="phone" required>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="bmd-label-floating">Director's Social Security Number</label>
                      <input type="text" class="form-control" id="ssn">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label>Biography</label>
                      <div class="form-group">
                        <label class="bmd-label-floating">Brief Info about Agency/Director</label>
                        <textarea class="form-control" rows="5" id="bio"></textarea>
                      </div>
                    </div>
                  </div>
                </div>
                 <input type="hidden" id="agencyId" required>
                <button type="submit" id="add_user_btn" class="btn btn-primary pull-right">Register</button>
                <div class="clearfix"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom footer -->
  <%- include('../../partials/bottombar'); -%>
</div>

<!-- page footer -->
<%- include('../../partials/footer'); -%>