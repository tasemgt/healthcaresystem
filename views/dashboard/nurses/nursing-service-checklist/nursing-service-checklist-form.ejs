<%- include('../../../partials/header'); -%>

<%- include('../../../partials/sidebar'); -%>


<div class="main-panel">
  <!-- Navbar area -->
  <%- include('../../../partials/navbar'); -%>

  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title"><%= title %> - <small><%= subtitle %></small></h4>
              <p class="card-category">Please fill in all required fields</p>
               <a href="/dashboard/nurses/nursing-service-delivery?all=true" type="button" id="add-btn" class="btn btn-light pull-right btn-sm">View all Forms</a>
            </div>
            <div class="card-body">
              <form id="nursing-services-checklist-form">
                <br>
                <% for(desc of descriptions) { %>
                <div class="check-area">
                  <h5 style="font-weight: bolder"><%= desc.title %></h5>
                  <div class="row">
                    <% for(item of desc.items) {%>
                      <div class="col-md-12 checkbox" >
                      <hr>
                        <div class="form-check form-check-inline">
                          <label class="col-form-label label-checkbox"><%= item.title %></label>
                          <!-- An if statement here to hide checkbox on section titles -->
                            <label class="form-check-label" style="position:absolute; right:-2rem; bottom:1.6rem">
                              <input class="form-check-input" type="checkbox">
                              <span class="form-check-sign">
                                <span class="check"></span>
                              </span>
                            </label>
                          
                        </div>
                      </div>
                      <% if(item.kids.length > 0) { %>
                        <div class="row" style="padding-left: 2rem">
                          <% for(subitem of item.kids) {%>
                            <div class="col-md-12 checkbox" >
                              <div class="form-check form-check-inline">
                                <label class="col-form-label label-checkbox"><%= subitem %></label>
                                <label class="form-check-label" style="position:absolute; right:-2rem; bottom:1.6rem">
                                  <input class="form-check-input" type="checkbox">
                                  <span class="form-check-sign">
                                    <span class="check"></span>
                                  </span>
                                </label>
                              </div>
                            </div>
                          <% } %>
                        </div>
                        <% } %>
                  <% } %>
                  </div>
                  <hr><br>
                  </div>
                <% } %>               
                <br><hr><br>
                <button type="submit" id="submit-btn" class="btn btn-primary pull-right">Submit</button>
                <div class="clearfix"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  
  <div style="margin-bottom: 11rem;"></div>

  <!-- Bottom footer -->
  <%- include('../../../partials/bottombar'); -%>
</div>

<!-- page footer -->
<%- include('../../../partials/footer'); -%>