<%- include('../../../partials/header'); -%>

<%- include('../../../partials/sidebar'); -%>


<div class="main-panel">
  <!-- Navbar area -->
  <%- include('../../../partials/navbar'); -%>

  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title"><%= title %></h4>
              <p class="card-category">Please fill in all required fields</p>
               <a href="/dashboard/nurses/nursing-service-delivery?all=true" type="button" id="add-btn" class="btn btn-light pull-right btn-sm">View all Forms</a>
            </div>
            <div class="card-body">
              <form id="nursing-services-delivery-form">
                <br>
                <div class="row">
                  <div class="col-md-4 col-sm-12">
                    <div class="form-group controls">
                      <label class="bmd-label-floating">Individual Name *</label>
                      <input type="text" class="form-control" id="individualName" required>
                    </div>
                  </div>
                  <div class="col-md-4 col-sm-12">
                    <div class="form-group controls">
                      <label class="bmd-label-floating">Location *</label>
                      <input type="text" class="form-control" id="location" required>
                    </div>
                  </div>
                  <div class="col-md-4 col-sm-12">
                    <div class="form-group controls">
                      <label class="bmd-label-floating">Local Case Number *</label>
                      <input type="text" class="form-control" id="lcNumber" required>
                    </div>
                  </div>
                </div>
                <br>
                <div id="check-area">
                  <div class="row" id="check-section">
                    <% for(description of descriptions) {%>
                      <div class="col-md-12 checkbox" >
                        <div class="form-check form-check-inline">
                          <label class="col-form-label label-checkbox"><%= description %></label>
                          <label class="form-check-label" style="position:absolute; right:-2rem; bottom:1.6rem">
                            <input class="form-check-input" type="checkbox">
                            <span class="form-check-sign">
                              <span class="check"></span>
                            </span>
                          </label>
                        </div>
                      </div>
                  <% } %>
                  </div>
                </div>
                <hr>
                <br>
                <div class="row">
                  <div class="col-md-3 col-sm-12">
                    <div class="form-group controls">
                      <label class="label-control">Service Date *</label>
                      <input type="text" class="form-control datepicker" id="serviceDate" required>
                    </div>
                  </div>
                  <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                      <label class="label-control">Begin Time *</label>
                      <input type="text" class="form-control timepicker" id="beginTime">
                    </div>
                  </div>
                  <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                      <label class="label-control">End Time *</label>
                      <input type="text" class="form-control timepicker" id="endTime">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group controls">
                      <label class="bmd-label-floating">Units of Service</label>
                      <input type="text" class="form-control" id="unitsOfService">
                    </div>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="col-md-3">
                    <div class="form-group controls">
                      <label class="bmd-label-floating">Nurse Name *</label>
                      <input type="text" class="form-control" id="nurseName">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group controls">
                      <label class="bmd-label-floating">Title</label>
                      <input type="text" class="form-control" id="title">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group controls">
                      <label class="bmd-label-floating">Nurse Signature *</label>
                      <input type="text" class="form-control" id="nurseSignature">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group controls">
                      <label class="bmd-label-floating">Staff ID</label>
                      <input type="text" class="form-control" id="staffID">
                    </div>
                  </div>
                </div>
                <br>
                <div id="nursingComponent">
                  <h5>Nursing Component:</h5>
                  <div class="row">
                    <div class="col-md-3 checkbox" >
                      <div class="form-check form-check-inline">
                        <label class="col-form-label label-checkbox">Registered Nurse (RN)</label>
                        <label class="form-check-label" style="position:absolute; right:-2rem; bottom:1.6rem">
                          <input class="form-check-input" type="checkbox" id="rn">
                          <span class="form-check-sign">
                            <span class="check"></span>
                          </span>
                        </label>
                      </div>
                    </div>
                    <div class="col-md-3 checkbox" >
                      <div class="form-check form-check-inline">
                        <label class="col-form-label label-checkbox">Licensed Vocational Nurse (LVN)</label>
                        <label class="form-check-label" style="position:absolute; right:-2rem; bottom:1.6rem">
                          <input class="form-check-input" type="checkbox" id="lvn">
                          <span class="form-check-sign">
                            <span class="check"></span>
                          </span>
                        </label>
                      </div>
                    </div>
                    <div class="col-md-3 checkbox" >
                      <div class="form-check form-check-inline">
                        <label class="col-form-label label-checkbox">Specialized RN</label>
                        <label class="form-check-label" style="position:absolute; right:-2rem; bottom:1.6rem">
                          <input class="form-check-input" type="checkbox" id="srn">
                          <span class="form-check-sign">
                            <span class="check"></span>
                          </span>
                        </label>
                      </div>
                    </div>
                    <div class="col-md-3 checkbox" >
                      <div class="form-check form-check-inline">
                        <label class="col-form-label label-checkbox">Specialized LVN</label>
                        <label class="form-check-label" style="position:absolute; right:-2rem; bottom:1.6rem">
                          <input class="form-check-input" type="checkbox" id="slvn">
                          <span class="form-check-sign">
                            <span class="check"></span>
                          </span>
                        </label>
                      </div>
                    </div>
                  </div>
                </div>
                <br><hr><br>
                <p>
                  * Additional supporting documentation for the Nursing Service Delivery Log is required for all service activities denoted by an asterisk (i.e., reports, assessments).
                </p>
                <button type="submit" id="submit-btn" class="btn btn-primary pull-right">Submit</button>
                <div class="clearfix"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  
  <div style="margin-bottom: 11rem;"></div>

  <!-- Bottom footer -->
  <%- include('../../../partials/bottombar'); -%>
</div>

<!-- page footer -->
<%- include('../../../partials/footer'); -%>