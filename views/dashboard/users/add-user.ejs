<%- include('../../partials/header'); -%>

<%- include('../../partials/sidebar'); -%>


<div class="main-panel">
  <!-- Navbar area -->
  <%- include('../../partials/navbar'); -%>

  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title">Register a User</h4>
              <p class="card-category">Please fill in all required fields</p>
            </div>
            <div class="card-body">
              <form id="add_user_form">
                <div class="row">
                  <div class="col-md-6 offset-md-6" style="padding-top: 1rem">
                    <div class="input-group no-border">
                      <label class="bmd-label-floating">Enter Job Application ID</label>
                      <input type="text" id="search" class="form-control" required>
                      <button type="button" class="btn btn-white btn-round btn-just-icon" id="searchApplication">
                        <i class="material-icons">search</i>
                        <div class="ripple-container"></div>
                      </button>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="bmd-label-floating">First Name *</label>
                      <input type="text" class="form-control" id="firstName" required>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="bmd-label-floating">Last Name *</label>
                      <input type="text" class="form-control" id="lastName" required>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="bmd-label-floating">Email address *</label>
                      <input type="email" class="form-control" id="email" required>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="bmd-label-floating">Home Address</label>
                      <input type="text" class="form-control" id="address">
                    </div>
                  </div>    
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="bmd-label-floating">Phone Number</label>
                      <input type="text" class="form-control" id="phone">
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="bmd-label-floating">Social Security Number *</label>
                      <input type="text" class="form-control" id="ssn" required>
                    </div>
                  </div>
                  <!--
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="bmd-label-floating">High School</label>
                      <input type="text" class="form-control" id="highSchool">
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="bmd-label-floating">Postal Code</label>
                      <input type="text" class="form-control" id="postalCode">
                    </div>
                  </div> -->
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label>Biography</label>
                      <div class="form-group">
                        <label class="bmd-label-floating">Brief Info about user</label>
                        <textarea class="form-control" rows="5" id="bio"></textarea>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="dropdown bootstrap-select">
                  <select id="role" class="selectpicker" data-size="8" data-style="btn btn-primary btn-round" title="Select User role *" tabindex="-98">
                    <option value="nurse">Nurse</option>
                    <option value="caregiver">Direct Care Giver</option>
                  </select>
                  
                  <div class="dropdown-menu " role="combobox">
                    <div class="inner show" role="listbox" aria-expanded="false" tabindex="-1">
                      <ul class="dropdown-menu inner show"></ul>
                    </div>
                  </div>
                </div>
                 <input type="hidden" id="applicationId" required>
                <button type="submit" id="add_user_btn" class="btn btn-primary pull-right">Register User</button>
                <div class="clearfix"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom footer -->
  <%- include('../../partials/bottombar'); -%>
</div>

<!-- page footer -->
<%- include('../../partials/footer'); -%>